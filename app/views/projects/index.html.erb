<%- model_class = Project -%>
<div class="page-header">
<%= link_to t('start_a_new_project'),
            new_project_path,
            :class => 'btn btn-lg btn-success' %>
</div>

      <!-- Example row of columns -->
	      <div class="row">
		 <% @projects.each do |project| %>
	        <div class="col-lg-4">
			  <img class="featurette-image img-responsive" src="<%=  project.image.url(:medium) %>" data-src="holder.js/140x140" alt="Generic placeholder image">
	          <h2><%= project.name %> <%= project.beta? ? '- [Beta]' : '' %></h2>
	          <p><%= project.description %></p>
	          <p><a class="btn btn-default" href="<%=project_path(project)%>">View details &raquo;</a></p>
	        </div>
	       	<% end %>
	      </div>