<%- model_class = Project -%>
<div class="page-header">
<%= link_to t('start_a_new_project'),
            new_project_path,
            :class => 'btn btn-lg btn-success' %>
</div>

  <!-- Example row of columns -->
<div class="row" name="current_projects">
 <% @projects.each do |project| %>
    <div class="col-md-4">
			<%= image_tag project.image.url, class: "img-responsive" %>
      <h2><%= project.name %> <%= project.beta? ? '- [Beta]' : '' %></h2>
      <p><%= project.description %></p>
      <p><a class="btn btn-default" href="<%=project_path(project)%>">View details &raquo;</a></p>
    </div>
  <% end %>
</div>
